            <colspec colname="c2" colnum="2" colwidth="4.4*"/>
            <colspec colname="c3" colnum="3" colwidth="1*"/>
            <thead>
              <row>
                <entry>Parameter name</entry>
                <entry>Description</entry>
                <entry>Type</entry>
              </row>
            </thead>
            <tbody>
              <row>
                <entry>POOL_DOMAINS</entry>
                <entry>Local DDS DomainParticipant</entry>
                <entry>Number</entry>
              </row>
              <row>
                <entry>POOL_SUBSCRIBERS</entry>
                <entry>DDS Subscriber</entry>
                <entry>Range</entry>
